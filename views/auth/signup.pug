extend ../layouts/main-layout.pug

block styles

block content
    main
        if errorMessage
            .user-message.user-message--error #{errorMessage}
        form.login-form( action="/signup" method="POST")
            .form-control
                label( for="email") E-mail
                input( type="text" name="email" value=oldInput.email)#email
            .form-control
                label( for="password") Password
                input( type="password" name="password" value=oldInput.password)#password
            .form-control 
                label( for="confirmPassword") Confirm Password
                input( type="password" name="confirmPassword" value=oldInput.confirmPassword)#confirmPassword
            input(type="hidden" name="_csrf" value=csrfToken)
            button.btn( type="submit") SignUp
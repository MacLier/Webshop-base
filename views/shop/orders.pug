extend ../layouts/main-layout.pug

block styles

block content
    if orders.length <= 0
        h1 Orders list
    else 
        ul.orders 
            each order of orders 
                li.orders__item 
                    h1 #{order._id}
                    ul.orders__products 
                        each product of order.products
                            li.orders__products-item |Title: #{product.product.title} Quantity: #{product.quantity}  
                                                     a(href=`/orders/${order._id}`) The invoice
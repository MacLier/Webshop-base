extend layouts/main-layout.pug

block styles

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header 
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://s.24.hu/app/uploads/2021/11/the-book-of-boba-fett-new-poster.jpg", alt="book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about a Mandalorain Bounty hunter
                        .card__actions
                            button.btn Add to Cart
        else 
            h1 No Produtcs